<div class="container">
    <div class="row random">
        <div class="col-sm-2">
            <img src={{ image_url}} alt={{ tname }}>
        </div>
        <div class="col-sm-10">
            <h3>{{ name }}</h3>
            <h5 class="titulo-h5">{{ tagline }}</h5>
            <p>{{ this.description }}</p>
            <Strong>Foog Pairing</Strong>
            <ul>
                {{#each food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p><strong>Brewers Tips:</strong> {{ brewers_tips }}</p>
        </div>
    </div>
</div>